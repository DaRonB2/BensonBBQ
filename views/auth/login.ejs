<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <% if (alerts.success) { %>
      <% alerts.success.forEach(msg => { %>
         
        <div class="alert alert-success"><%= msg %></div>
      <% }) %>
    <% } %>

    <% if (alerts.error) { %>
      <% alerts.error.forEach(msg => { %>
       <div class="alert alert-danger"><%= msg %></div>
      <% }) %>
  <% } %>

  <header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#" style="color: crimson;">Benson's</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/" style="color: crimson;">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="../menu" style="color: crimson;">Menu</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" " href="../order" style="color: crimson;">Order</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="../status" style="color: crimson;">Status</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="../cart" style="color: crimson;">Cart</a>
            </li>
            <% if(!currentUser) { %> 
              <li class="nav-item">
                  <a class="nav-link" style="color: crimson;" href="/auth/signup">Signup</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link active" aria-current="page" style="color: crimson;" href="/auth/login">Login</a>
              </li>
            <% } else { %> 
            <li class="nav-item">
              <a class="nav-link" style="color: crimson;" href="/auth/logout">Logout</a>
          </li>
            <li class="nav-item">
              <a class="nav-link" style="color: crimson;" href="/profile">Profile</a>
          </li>
            <% } %> 
          </ul>
        </div>
      </div>
    </nav>
  </header>
    
    <section class="contact" id="contact">
        <h2 class="heading" style="color: crimson;"><span>Login!</span></h2>

        <form action="/auth/login" method="POST">
            <div class="input-box">
                <input type="email" placeholder="Email" name="email">
                <input type="password" placeholder="Password" name="password">
            </div>
            <input type="submit" value="Login" class="btn">
        </form>
    </section>
</body>
</html>